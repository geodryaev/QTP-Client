<Window x:Class="QTP_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QTP_Client"
        mc:Ignorable="d"
        Title="QTP Client" Height="250" Width="400">
    <Grid>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem Header="Настройки" Height="25">
                <MenuItem Header="Подключение к БД" Click="MenuItem_Click"></MenuItem>
                <Separator/>
                <MenuItem x:Name="m_exit" Header="Exit" Click="m_exit_Click"></MenuItem>
            </MenuItem>
        </Menu>
        <Button x:Name="b_conncet" Content="Подключиться" HorizontalAlignment="Left" Margin="275,0,0,0" VerticalAlignment="Center" Width="95" Click="b_conncet_Click"/>
        <PasswordBox x:Name="pb_passwrod"  HorizontalAlignment="Left" Margin="50,0,0,0" VerticalAlignment="Center" Width="186" Height="20"/>


    </Grid>
</Window>
