<Window x:Class="QTP_Client.TestingWindow"
        WindowState="Maximized"
        ResizeMode="CanMinimize"
        Topmost="True"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QTP_Client"
        mc:Ignorable="d"
        Title="QTP-Client" Height="1080" Width="1920">
    <Grid>
        <StackPanel x:Name="sp_navigations" HorizontalAlignment="Right" VerticalAlignment="Top" Width="400" Height="400" Background="Gray" Margin="0,10,10,0"/>
        <TextBlock x:Name="tb_tems" HorizontalAlignment="Left" Margin="55,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" FontFamily="Times New Roman"/>
        <TextBlock x:Name="tb_Question" Padding="15" TextAlignment="Left" HorizontalAlignment="Left" Margin="75,200,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="203" Width="1346" FontSize="20" FontFamily="Times New Roman" Background="Gray"/>
        <StackPanel x:Name="sp_answer" HorizontalAlignment="Right" VerticalAlignment="Top" Width="1835" Height="560" Background="Gray" Margin="0,426,10,0"/>
        <TextBlock x:Name="tb_time" HorizontalAlignment="Left" Margin="10,1027,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20"/>
        <Button x:Name="b_next" Content="Следущий вопрос" HorizontalAlignment="Left" Margin="1710,1017,0,0" VerticalAlignment="Top" Height="37" Width="200" FontFamily="Times New Roman" FontSize="20"/>
    </Grid>
</Window>
